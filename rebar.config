{erl_opts, [
  debug_info,
  {platform_define, "^R", pre17},
  {parse_transform, stacktrace_transform}
]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.

{profiles, [
  {test, [
    {plugins, [
        {rebar3_eqc, ".*", {git, "https://github.com/kellymclaughlin/rebar3-eqc-plugin.git", {tag, "0.0.8"}}}
    ]}
  ]
}]}.

{deps, [
    {stacktrace_compat, ".*", {git, "https://github.com/g-andrade/stacktrace_compat.git", {tag, "1.0.0"}}}
]}.
